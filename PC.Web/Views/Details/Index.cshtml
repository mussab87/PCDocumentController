@model IEnumerable<PC.Services.Core.Models.Details>
@{
    ViewBag.Title = "Details List";
}

<section class="content">
    <div id="PlaceHolderHereUser"></div>
    <div class="container-fluid">
        <div class="block-header">

            <a asp-action="Create" asp-controller="Details" class="btn bg-primary btn-lg btn-block runbtn" style="width: 200px" type="button">
                <i class="glyphicon glyphicon-work"></i>
                Add New Details
            </a>
        </div>

        <!-- Exportable Table -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <h2>
                            Details List
                        </h2>

                    </div>

                    <div class="body">

                        <div class="table-responsive">
                            @if (Model.Any())
                            {
                                <table class="table table-bordered table-striped table-hover dataTable js-exportable">
                                    <thead>
                                        <tr>
                                            <th>No</th>
                                            <th hidden>
                                                Id
                                            </th>
                                            <th>
                                                Main Category
                                            </th>
                                            <th>Activity</th>
                                            <th>Details</th>

                                            <th>
                                                Created By
                                            </th>
                                            <th>
                                                Created Date
                                            </th>
                                            <th>Updated By</th>
                                            <th>Updated Date</th>
                                            <th></th>

                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>No</th>
                                            <th hidden>
                                                Id
                                            </th>
                                            <th>
                                                Main Category
                                            </th>
                                            <th>Activity</th>
                                            <th>Details</th>

                                            <th>
                                                Created By
                                            </th>
                                            <th>
                                                Created Date
                                            </th>
                                            <th>Updated By</th>
                                            <th>Updated Date</th>
                                            <th></th>

                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        @{
                                            int No = 0;
                                        }
                                        @foreach (var detail in Model)
                                        {
                                            No = No + 1;
                                            <tr>
                                                <td> @No </td>
                                                <td hidden>@detail.DetailsId</td>
                                                <td>
                                                    @detail.Activity.MainCategory.Name
                                                </td>
                                                <td>
                                                    @detail.Activity.Name
                                                </td>

                                                <td>
                                                    @detail.Name
                                                </td>
                                                <td>
                                                    @detail.CreatedBy
                                                </td>
                                                <td>
                                                    @detail.CreatedDateTime
                                                </td>
                                                <td>
                                                    @detail.UpdatedBy
                                                </td>

                                                <td>
                                                    @detail.UpdatedDateTime
                                                </td>

                                                <td>
                                                    <form method="post" asp-action="Delete" asp-route-id="@detail.DetailsId">

                                                        <a asp-action="Edit"
                                                   asp-route-id="@detail.DetailsId" class="btn btn-info text-white" style="cursor:pointer">
                                                            <span class="glyphicon glyphicon-pencil"></span>
                                                        </a>
                                                        <hr>
                                                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delet? : @detail.Name')">
                                                            <span class="glyphicon glyphicon-trash"></span>
                                                        </button>
                                                    </form>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                            else
                            {
                                <p><h4 style="text-align:center">No Data to Display</h4></p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- #END# Exportable Table -->
    </div>
</section>

<!-- Jquery Core Js -->
<script src="~/styles/ww/plugins/jquery/jquery.min.js"></script>

<!-- Custom Js -->
<script src="~/styles/ww/js/pages/tables/jquery-datatable.js"></script>

