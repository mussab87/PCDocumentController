@model PC.Services.Core.Models.Details

@{
    ViewBag.Title = "Create Details";
}


 <form asp-controller="Details" asp-action="Create" method="post">
    <div class="container-fluid">

        <div class="row">
            <br />
            <br />
        </div>

        <div class="row">
            <ul>
                <li class="step show" id="step-1">
                    <div class="bar">
                        
                        <h3>Create Activity Details</h3>
                        <div class="status"></div>
                    </div>

                    <div class="box">
                        <div class="field-holder">                            
                            <div class="row">
                                <div class="form-group col-md-4">
                                    <label asp-for=Name>Details</label>
                                    <textarea asp-for=Name class="form-control input-lg"  required="required"></textarea>
                                </div>
                            </div>  
                            
                            <div class="row">
                                 <div class="form-group col-md-4">
                        <label asp-for="ActivityId">Activity</label>
                        <i class="red">*</i>
                                     <br />
                                    <select asp-for="ActivityId" class="form-control input-lg required" asp-items="ViewBag.Activity" required="required">

                    <option>Select Activity</option>
                </select>
                        <span asp-validation-for="ActivityId" class="text-danger" ></span>

                 
                </div>
                            </div>   
                        </div>

                        <div class="btn-group pull-right row" id="divSaveRecordButton">
                <div class="form-group col-md-12" style="padding-right: 50px; padding-bottom: 20px">
                    <button class="btn btn-primary m-b-md" type="submit" title="Save" value="">
                        <span><i class="fa fa-floppy-o"></i>&nbsp;Save</span>
                    </button>
                </div>
            </div>

            <div class="btn-group pull-left row" id="divBackRecordButton">
                <div class="form-group col-md-10" style="padding-left: 60px; padding-bottom: 20px">
                  <a asp-controller="Details" asp-action="Index" class="btn btn-primary m-b-md" type="button" title="Back">
                      <span><i class="fa fa-arrow-left"></i>&nbsp;Back</span>
                  </a>  
                        
                </div>
            </div>
                    </div>
                </li>

                <br />
            </ul>

            
        </div>

    </div>
    </form>
    <!-- Vendor scripts -->
    <script src="~/vendor/jquery/dist/jquery.min.js"></script>
    <script src="~/vendor/jquery-ui/jquery-ui.min.js"></script>
    <script src="~/vendor/slimScroll/jquery.slimscroll.min.js"></script>
    <script src="~/vendor/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/vendor/metisMenu/dist/metisMenu.min.js"></script>

    <!-- App scripts -->
    <script src="~/scripts/main.js"></script>
    
    <script src="~/vendor/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/vendor/sweetalert/lib/sweetalert2.min.js"></script> 

     <script>
        $(document).ready(function () {

            $('#ActivityId').select2({});
             
        });
    </script>