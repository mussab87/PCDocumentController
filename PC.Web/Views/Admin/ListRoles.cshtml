@model IEnumerable<IdentityRole>
@{
    ViewBag.Title = "Roles List";
}

<div class="row">
    <div class="form-group col-md-4">
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <a asp-action="CreateRole" asp-controller="admin" class="btn btn-primary btn-lg btn-block runbtn" style="width: 200px" type="button" id="btnGetPatient" name="btnGetPatient">
            <i class="glyphicon glyphicon-lock">
            </i>&nbsp;&nbsp;&nbsp;Create New Role
        </a>
    </div>

    <div class="col-md-12">

        <div class="modal fade" id="myModal">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <a href="#" class="close" data-dismiss="modal">&times;</a>
                        <div class="col" style="text-align:right"><h3>System Roles</h3></div>
                    </div>
                    <div class="modal-body" id="myModalBodyDiv">
                    </div>
                    <div class="modal-footer">
                        <a href="#" class="btn btn-default" data-dismiss="modal">Close</a>

                    </div>

                </div>

            </div>

        </div>

        <div id="PlaceHolderHereUser"></div>

        <div class="row" id="divResults">
            <div class="resultTable" style="padding: 20px; padding-bottom: 50px">
                @if (Model.Any())
                {
                    <table width="100%" class="table table-striped table-bordered media-table" id="tbl" name="tbl">
                        <thead>
                            <tr>
                                <th>
                                    Id
                                </th>
                                <th>
                                    Role Name
                                </th>
                                <th></th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var role in Model)
                            {
                                <tr>
                                    <td>@role.Id</td>
                                    <td>
                                        @role.Name
                                    </td>
                                    <td>

                                        <form method="post" asp-action="DeleteRole" asp-route-id="@role.Id">

                                            <a asp-action="EditRole" asp-controller="Admin"
                                       asp-route-id="@role.Id" class="btn btn-info text-white" style="cursor:pointer">
                                                <span class="glyphicon glyphicon-pencil"></span>
                                            </a>


                                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delet? : @role.Name')">
                                                <span class="glyphicon glyphicon-trash"></span>
                                            </button>

                                            <button type="button" class="btn btn-primary" data-toggle="ajax-modal" data-target="#addUserr"
                                            data-url="@Url.Action($"EditUsersInRole?roleId={@role.Id}")">
                                                Add Users to Role
                                            </button>


                                        </form>



                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p><h4 style="text-align:center">No Data to Display</h4></p>
                }

            </div>
        </div>
    </div>

</div>

<!-- Vendor scripts -->
<script src="~/vendor/jquery/dist/jquery.min.js"></script>
<script src="~/vendor/jquery-ui/jquery-ui.min.js"></script>
<script src="~/vendor/slimScroll/jquery.slimscroll.min.js"></script>
<script src="~/vendor/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="~/vendor/metisMenu/dist/metisMenu.min.js"></script>

<!-- App scripts -->
<script src="~/scripts/main.js"></script>

<script src="~/vendor/jquery-validation/jquery.validate.min.js"></script>
<script src="~/vendor/sweetalert/lib/sweetalert2.min.js"></script>


