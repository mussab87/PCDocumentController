
@model IEnumerable<ApplicationUser>

@{ ViewBag.Title = "Users";}

    <div class="row">
        <div class="col-md-12">
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
       <a asp-action="AddNewAccount" asp-controller="admin" class="btn btn-primary btn-lg btn-block runbtn"  style="width: 200px" type="button">
            <i class="glyphicon glyphicon-user">
            </i>&nbsp;&nbsp;&nbsp;Add New User </a>
                                </div>


<div class="col-md-12">

<div id="PlaceHolderHereUser"></div>
 
            <div class="row" id="divResults">
               
                <div class="resultTable" style="padding: 20px; padding-bottom: 50px">
                     
                    @if (Model.Any())
                        {
                        <table width="100%" class="table table-striped table-bordered media-table" id="tbl" name="tbl">
                            <thead>
                    <tr>
                        <th hidden>
                            Id
                        </th>
                        <th>
                            User Name
                        </th>
                        <th>
                            Full Name
                        </th>
                        <th>
                            Job Title
                        </th>
                        <th>
                            User Status
                        </th>

                        <th></th>
                    </tr>
                </thead>
                            <tbody>
                                @foreach (var account in Model)
                    {
    <tr>
        <td hidden>@account.Id</td>
        <td>
            @account.UserName
        </td>
         <td>
            @account.FirstName  @account.LastName
        </td>
        <td>
            @if(account.UserJobTitle.Count > 0)
                                        {
                                            @account.UserJobTitle[0].JobTitle.JobTitleName
                                        }
                                        else
                                        {
                                            <text>No Job Title Entered</text>
                                        }

        </td>
        <td>
            @if(@account.UserStatus == true)
                                        {
                                            <text>active</text> 
                                        }
                                        

                @if(@account.UserStatus == false)
                                        {
                                            <text>InActive</text> 
                                        }
                                        
        </td>
        <td>

            <form method="post" asp-action="DeleteUser" asp-route-id="@account.Id">

                <a asp-action="EditUser" asp-controller="Admin"
                   asp-route-id="@account.Id" class="btn btn-info text-white" style="cursor:pointer">
                     <span class="glyphicon glyphicon-pencil"></span>
                </a>


                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delet? : @account.UserName')">
                    <span class="glyphicon glyphicon-trash"></span>
                </button>
                
                 <a class="btn btn-primary" asp-action="ChangeUserPassword" asp-route-id="@account.Id">Change Password</a>
            </form>
        </td>
    </tr>
       }
                </tbody>
            </table>}
        else
        {
<p><h4 style="text-align:center">No Data to Display</h4></p>}
                    </div>

                </div>
            </div>
        </div>

    

<!-- Vendor scripts -->
    <script src="~/vendor/jquery/dist/jquery.min.js"></script>
    <script src="~/vendor/jquery-ui/jquery-ui.min.js"></script>
    <script src="~/vendor/slimScroll/jquery.slimscroll.min.js"></script>
    <script src="~/vendor/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/vendor/metisMenu/dist/metisMenu.min.js"></script>

    <!-- App scripts -->
    <script src="~/scripts/main.js"></script>
    
    <script src="~/vendor/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/vendor/sweetalert/lib/sweetalert2.min.js"></script>   







