@model PC.Services.DL.ViewModels.ChangePasswordViewModel

@{

    ViewBag.Title = "Change User Password";
}

<form asp-action="ChangeUserPassword" method="post">

    <section class="content">
        <div class="container-fluid">
            <!-- Input Group -->
            <div class="row clearfix">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card">
                        <div class="header">
                            <h2>
                                Change @Model.username Password
                            </h2>
                        </div>
                        <div class="body">

                            <div class="row clearfix">
                                <div class="col-md-4">
                                    <div class="input-group input-group-lg">
                                        <span class="input-group-addon">
                                            <i class="material-icons">person</i>
                                        </span>
                                        <label asp-for="username"></label>
                                        <div class="form-line">
                                            <input type="text" asp-for="username" class="form-control" placeholder="Username">
                                            <span asp-validation-for="username" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row clearfix">
                                <div class="col-md-4">
                                    <div class="input-group input-group-lg">
                                        <span class="input-group-addon">
                                            <i class="material-icons">lock</i>
                                        </span>
                                        <label asp-for="NewPassword"></label>
                                        <div class="form-line">
                                            <input type="password" asp-for="NewPassword" class="form-control" placeholder="New Password" />
                                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                                        </div>


                                    </div>
                                </div>
                            </div>
                            <div class="row clearfix">
                                <div class="col-md-4">
                                    <div class="input-group input-group-lg">
                                        <span class="input-group-addon">
                                            <i class="material-icons">lock</i>
                                        </span>
                                        <label asp-for="ConfirmPassword"></label>
                                        <div class="form-line">
                                            <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                        </div>


                                    </div>
                                </div>
                            </div>

                            <hr />
                            <div class="row clearfix">
                                <div class="button-demo">
                                    <button class="btn bg-primary waves-effect" type="submit" title="Save">
                                        Save
                                    </button>

                                    <a asp-action="ListUsers" class="btn bg-warning waves-effect" type="button" title="Back">
                                        Back
                                    </a>
                                </div>

                                <div asp-validation-summary="All" class="text-danger"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- #END# Input Group -->
    </section>
</form>

<!-- App scripts -->
<script src="~/styles/ww/plugins/jquery/jquery.min.js"></script>