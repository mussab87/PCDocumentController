@model PC.Services.DL.ViewModels.ChangePasswordViewModel

@{

    ViewBag.Title = "Change User Password";
}

<div class="container-fluid">
    <div class="row">
        <ul>
            <form asp-action="ChangeUserPassword" method="post">
            <li class="step show" id="step-1">
                <div class="bar">

                    <h3>Change @Model.username Password</h3>
                    <div class="status"></div>
                </div>

                <div class="box">
                    <div class="field-holder">
                        <div class="row">
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                </div>
                            </div>
                            <input type="hidden" asp-for="Id" />
                            <div class=row>
                                <div class="form-group col-md-6">
                                    <label asp-for="username"></label>
                                    <input type="text" asp-for="username" class="form-control input-lg" disabled="disabled">
                                    <span asp-validation-for="username" class="text-danger"></span>
                                </div>
                            </div>


                            <div class=row>
                                    @* <div class="form-group col-md-4">
                                        <label asp-for="CurrentPassword"></label>
                                        <div class="input-group-prepend">
                                        <input asp-for="CurrentPassword" class="form-control input-lg" />
                                        </div>
                                        <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                                        </div>*@
                                <div class="form-group col-md-6">
                                    <label asp-for="NewPassword"></label>
                                    <div class="input-group-prepend">
                                        <input asp-for="NewPassword" class="form-control input-lg" />
                                    </div>
                                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                                </div>

                                <div class="form-group col-md-6">
                                    <label asp-for="ConfirmPassword"></label>
                                    <div class="input-group-prepend">
                                        <input asp-for="ConfirmPassword" class="form-control input-lg" />
                                    </div>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="btn-group pull-right row" id="divSaveRecordButton">
                        <div class="form-group col-md-12" style="padding-right: 50px; padding-bottom: 20px">
                            <button class="btn btn-primary m-b-md" type="submit" title="Save" value="">
                                <span><i class="fa fa-floppy-o"></i>&nbsp;Save</span>
                            </button>
                        </div>
                    </div>

                    <div class="btn-group pull-left row" id="divBackRecordButton">
                        <div class="form-group col-md-10" style="padding-left: 60px; padding-bottom: 20px">
                            <a asp-action="ListUsers" class="btn btn-primary m-b-md" type="button" title="Back">
                                <span><i class="fa fa-arrow-left"></i>&nbsp;Back</span>
                            </a>
                        </div>
                    </div>
                </div>
            </li>
            </form>
            <br />
        </ul>

    </div>
</div>

<!-- ~/vendor scripts -->
<script src="~/vendor/jquery/dist/jquery.min.js"></script>
<script src="~/vendor/jquery-ui/jquery-ui.min.js"></script>
<script src="~/vendor/slimScroll/jquery.slimscroll.min.js"></script>
<script src="~/vendor/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="~/vendor/metisMenu/dist/metisMenu.min.js"></script>

<!-- App scripts -->
<script src="~/scripts/main.js"></script>

<script src="~/vendor/jquery-validation/jquery.validate.min.js"></script>
<script src="~/vendor/sweetalert/lib/sweetalert2.min.js"></script>