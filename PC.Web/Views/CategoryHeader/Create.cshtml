@model PC.Services.DL.ViewModels.CategoryHeaderViewModel

@{
    ViewBag.Title = "Create Category Header";
}

<form asp-controller="CategoryHeader" asp-action="Create" method="post">

    <section class="content">
        <div class="container-fluid">
            <!-- Input Group -->
            <div class="row clearfix">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card">
                        <div class="header">
                            <h2>
                                Add Category Header
                            </h2>
                        </div>
                        <div class="body">

                            <div class="row clearfix">
                                <div class="col-md-4">
                                    <div class="input-group input-group-lg">
                                        <label asp-for="AuthorityId"></label>
                                        <div class="form-line">
                                            <select asp-for="AuthorityId" asp-items="ViewBag.AuthorityMatrix" required="required">

                                                <option>Select Authority Matrix</option>
                                            </select>
                                            <span asp-validation-for="AuthorityId" class="text-danger"></span>
                                        </div>


                                    </div>
                                </div>
                            </div>

                            <div class="row clearfix">
                                <div class="col-md-4">
                                    <div class="input-group input-group-lg">
                                        <label asp-for="MainCategoryId"></label>
                                        <div class="form-line">
                                            <select asp-for="MainCategoryId" class="form-control show-tick" data-live-search="false" asp-items="ViewBag.MainCategory" required="required" onchange="getActivity()">

                                                <option>Select Main Category</option>
                                            </select>
                                            @*<span asp-validation-for="MainCategoryId" class="text-danger"></span>*@
                                        </div>


                                    </div>
                                </div>
                            </div>

                            <div class="row clearfix">
                                <div class="col-md-4">
                                    <div class="input-group input-group-lg">
                                        <label asp-for="ActivityId"></label>
                                        <div class="form-line">
                                            <select asp-for="ActivityId" class="form-control show-tick" data-live-search="false" onchange="getDetails()" required="required">

                                                <option>Select ActivityId</option>
                                            </select>
                                            <span asp-validation-for="ActivityId" class="text-danger"></span>
                                        </div>


                                    </div>
                                </div>
                            </div>

                            <div class="row clearfix">
                                <div class="col-md-4">
                                    <div class="input-group input-group-lg">
                                        <label asp-for="DetailsId"></label>
                                        <div class="form-line">
                                            <select asp-for="DetailsId" class="form-control show-tick" data-live-search="false" required="required">

                                                <option>Select Details</option>
                                            </select>
                                            <span asp-validation-for="DetailsId" class="text-danger"></span>
                                        </div>


                                    </div>
                                </div>
                            </div>


                            <hr />
                            <div class="row clearfix">
                                <div class="button-demo">
                                    <button class="btn bg-primary waves-effect" type="submit" title="Save">
                                        Save
                                    </button>

                                    <a asp-controller="CategoryHeader" asp-action="Index" class="btn bg-warning waves-effect" type="button" title="Back">
                                        Back
                                    </a>
                                </div>

                                <div asp-validation-summary="All" class="text-danger"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- #END# Input Group -->


    </section>
</form>

<!-- App scripts -->
<script src="~/styles/ww/plugins/jquery/jquery.min.js"></script>

<script type="text/javascript">
     $(document).ready(function () {

        $('#MainCategoryId').select2({});
        $('#ActivityId').select2({});
        $('#DetailsId').select2({});

        $('#LevelUser').select2({});
        $('#LevelRole').select2({});

        getDetails();
        getActivity();

    });


</script>