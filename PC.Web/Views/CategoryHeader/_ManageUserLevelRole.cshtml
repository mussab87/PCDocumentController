@model PC.Services.DL.ViewModels.UserLevels

@{
    var levelId = ViewBag.levelId;
}

<div class="modal fade" id="addUserLevelRole" tabindex="-1" data-backdrop="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="addUserLevelRole">Update Role to User</h4>
                <button type="button" class="close" data-dismiss="modal">
                    <span>X</span>
                </button>
            </div>

            <div class="modal-body">
                <form controller="CategoryHeader" action="ManageUserLevelRole">
                    <input type="hidden" id="LevelId" value="@levelId" />
                    <input type="hidden" id="UserOldRoleId" value="@Model.roleId" />
                    <input type="hidden" id="UserNewRoleId" value="" />
                    <div class="form-group">
                        <div class="form-group col-md-6">
                            <label asp-for="roleId">User Role Under This Level </label>
                            <i class="red">*</i>
                            <br />
                            <select asp-for="roleId" class="form-control input-lg required" asp-items="ViewBag.roleList" onchange="getroleId()" required="required">
                                <option value="0">Select User Role</option>
                            </select>
                            <span asp-validation-for="roleId" class="text-danger"></span>
                        </div>

                        <div asp-validation-summary="All" class="text-danger"></div>
                    </div>
                </form>
            </div>

            <div class="modal-footer">

                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" data-save="modalLevel" data-url="@Url.Action($"ManageUserLevelRole")">Save</button>
            </div>
        </div>
    </div>
</div>

<script>
        function getroleId() {

        var Selected_roleId = $('#roleId').val();
        $('#UserNewRoleId').val(Selected_roleId);
    }
</script>